<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- AppBar / Toolbar do Material -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitle="Usuário: —"
        app:title="Conhecimentos Gerais" />

    <!-- Botão História -->
    <Button
        android:id="@+id/btnHistoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="16dp"
        android:text="História"
        app:layout_constraintBottom_toTopOf="@+id/btnMatematica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <!-- Botão Matemática -->
    <Button
        android:id="@+id/btnMatematica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Matemática"
        app:layout_constraintTop_toBottomOf="@id/btnHistoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botão Estatísticas -->
    <Button
        android:id="@+id/btnEstatisticas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estatísticas"
        app:layout_constraintTop_toBottomOf="@id/btnMatematica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>